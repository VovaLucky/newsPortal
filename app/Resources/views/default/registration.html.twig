{% extends 'base.html.twig' %}

{% block title %}
    Registration
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bootstrap/css/signin.css') }}">
    <link rel="stylesheet" href="{{ asset('css/index.css') }}">
{% endblock %}

{% block body %}
    <div class="container" id="authorizationForm">
        <form class="form-signin" action="{{ path('register') }}" method="POST">
            <h3 class="form-signin-heading">Join to NewsPortal</h3>
            <input type="email" name="Email" id="Email" class="form-control" placeholder="Email" value="" required autofocus>
            <input type="password" name="Password" id="Password" class="form-control" placeholder="Password" style="margin-bottom: 0" required>
            <input type="password" name="repeatPassword" id="repeatPassword" class="form-control" placeholder="Repeat password" required>
            <button type="submit" class="btn btn-lg btn-primary btn-block">Create</button>
        </form>
    </div>
{% endblock %}